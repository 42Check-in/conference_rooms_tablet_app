<resources>
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FieldNameStyle" parent="BaseTextViewStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkSlateGray</item>
        <item name="fontFamily">@font/nanumsquareneodeb</item>
    </style>

    <style name="RecodeStyle" parent="BaseTextViewStyle">
        <item name="android:padding">23dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nanumsquareneocbd</item>
    </style>
</resources>